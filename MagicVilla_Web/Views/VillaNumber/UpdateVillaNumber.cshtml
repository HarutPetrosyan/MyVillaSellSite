@model MagicVilla_Web.Models.ViewModel.VillaNumberUpdateVM
<form asp-action="UpdateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa Number</h1>

        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>



            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 p-3">
                <input asp-for="VillaNumber.VillaNo"  class="form-control" />
                <span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 p-3">
                <select asp-for="VillaNumber.VillaId" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpetialDetails" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 p-3">
                <textarea asp-for="VillaNumber.SpetialDetails" class="form-control"></textarea>
                <span asp-validation-for="VillaNumber.SpetialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="UpdateVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}